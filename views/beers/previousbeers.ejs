<% layout('../layouts/boilerplate')%>
<main>
	<div class="allcontent">
		<p class="title" id="ontap" >~ Previous Beers ~</p>
        <% for (let beer of beers) {%>
			<%if(beer.ontap === 'previous') {%>
			<div class="imageblocks">
				<div>
					<h1 class="beertitle">- <%= beer.name %> - 2022/10/16 - </h1>
					<ul class="menuflex-container">
						<li class="flex-item">2022 - Oct</li>
						<li class="flex-item">ABV - <%= beer.abv %>%</li>
						<li class="flex-item">STYLE - <%= beer.style %></li>
						<li class="flex-item">IBU - <%= beer.ibu %></li>
						<% if(beer.dryHops > 0) { %>
						<li class="flex-item">DRY HOPS - <%= beer.dryHops %> g/l</li>
						<% } %> 
				  	</ul>
					<br>
					<p class="descriptiontext"><%= beer.description %>
					<br>
					<br>
					<a href="/beers/<%=beer._id%>">more</a>
				</div>
			</div>
	<%}}%>
	</div>
	<br>
	<br>
	<br>
	<br>
	<br>	
</main>